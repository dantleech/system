#Set default values for all following accounts.
defaults
auth on
tls on
logfile ~/Mail/.msmtp.log

# My SMTP
account dantleech
tls_certcheck on
tls_fingerprint {{ server.ssl_fingerprint }}

host mail.dantleech.com
port 25
from daniel@dantleech.com
user daniel@dantleech.com
password {{ secure.user.mailpassword }}

