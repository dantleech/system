#Set default values for all following accounts.
defaults
auth plain
logfile {{ user.mail.basedir }}/.msmtp.log

# My SMTP
account daniel
tls on
tls_starttls off
tls_certcheck on
tls_trust_file /etc/ssl/certs/ca-certificates.crt

host {{ user.mail.accounts[user.mail.primaryaccount].smtp }}
port 465
from {{ user.email }}
user {{ user.email }}
password {{ secure.user.smtp.password }}

# Set a default account
account default : daniel

