#Set default values for all following accounts.
defaults
auth on
tls on
logfile {{ user.mail.dir }}/.msmtp.log

# My SMTP
account {{ user.name }}
tls_certcheck on
tls_fingerprint {{ server.ssl_fingerprint }}

host {{ user.mail.server }}
port 25
from {{ user.email }}
user {{ user.email }}
password {{ secure.user.mail.password }}

# Ylly
# account        massiveart
# host           smtp.gmail.com
# port           587
# from           daniel.leech@massiveart.com
# user           daniel.leech@massiveart.com
# password       
# tls_trust_file /etc/ssl/certs/ca-certificates.crt

# Set a default account
account default : {{ user.name }}

