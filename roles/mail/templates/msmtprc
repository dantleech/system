#Set default values for all following accounts.
defaults
auth on
tls on
logfile {{ user.mail.basedir }}/.msmtp.log

# My SMTP
account {{ user.name }}
tls_certcheck on
tls_fingerprint {{ server.ssl_fingerprint }}

host {{ user.mail.accounts[user.mail.primaryaccount].server }}
port 25
from {{ user.email }}
user {{ user.email }}
password {{ secure.user.mail.password }}

# Set a default account
account default : {{ user.name }}

