# Sample minimal config file.  Copy this to ~/.offlineimaprc and edit to
# suit to get started fast.

[general]
accounts = {{ user.name }}
ui = Blinkenlights

[Account {{ user.name }}]
localrepository = Local
remoterepository = Remote
autorefresh = 5

[Repository Local]
type = Maildir
localfolders = {{ user.mail.dir }}

[Repository Remote]
type = IMAP
remotehost = {{ user.mail.server }}
remoteuser = {{ user.mail.user }}
remotepass = {{ secure.user.mail.password }}
ssl=yes 
cert_fingerprint={{ server.ssl_fingerprint | regex_replace(':', '') }}

folderfilter = lambda foldername: foldername not in ['dovecot.sieve']
