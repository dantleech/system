# for mutt to view html e-mails
text/html; elinks -dump ; copiousoutput;
text/html; /usr/local/bin/vimb %s; description=HTML Text; test=test -n "$DISPLAY";  naetemplate=%s.html
image/png;  /usr/local/bin/vimb %s; description=PNG Image; test=test -n "$DISPLAY";  nametemplate=%s.png
image/jpeg;  /usr/local/bin/vimb %s; description=JPEG Image; test=test -n "$DISPLAY";  nametemplate=%s.jpeg
image/gif;  /usr/local/bin/vimb %s; description=GIF Image; test=test -n "$DISPLAY";  nametemplate=%s.gif
